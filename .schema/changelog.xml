<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet author="Jaera" id="1">
        <createTable tableName="custom_command">
            <column name="command_name" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="server_id" type="VARCHAR(255)">
                    <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="link" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="custom_command_usage">
            <column name="command_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="server_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="calling_username" type="VARCHAR(255)"/>
            <column name="usage_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseColumnNames="command_name,server_id"
                baseTableName="custom_command_usage"
                referencedColumnNames="command_name,server_id"
                referencedTableName="custom_command"
                constraintName="command_name_usage_base_command_exists"
        />
    </changeSet>
    <changeSet author="Jaera" id="2">
        <renameColumn
                tableName="custom_command"
                oldColumnName="server_id"
                newColumnName="guild_id"
        />
    </changeSet>
    <changeSet author="Jaera" id="3">
        <createTable tableName="ab_history">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="server_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="roll_type" type="VARCHAR(255)"/>
            <column name="roll_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="player_lookup">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="batter_card_path" type="VARCHAR(255)"/>
            <column name="pitcher_card_path" type="VARCHAR(255)"/>
            <column name="year" type="VARCHAR(255)" />
            <column name="active" type="boolean" defaultValue="true"/>
        </createTable>
        <createTable tableName="fielding_range">
            <column name="roll" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="values" type="VARCHAR(255)">
                    <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="fielding_error">
            <column name="roll" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="e_rating" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="Jaera" id="4">
        <createTable tableName="chart">
            <column name="chart_name" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="server_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="channel_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="TEXT" />
            <column name="description" type="TEXT" />
            <column name="image_link" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="chart_usage">
            <column name="chart_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="server_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="channel_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="calling_username" type="VARCHAR(255)"/>
            <column name="usage_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseColumnNames="chart_name,server_id,channel_id"
                baseTableName="chart_usage"
                referencedColumnNames="chart_name,server_id,channel_id"
                referencedTableName="chart"
                constraintName="chart_name_usage_base_chart_exists"
        />
    </changeSet>
    <changeSet author="Jaera" id="5">
        <dropColumn tableName="chart_usage" columnName="channel_id"/>
        <dropColumn tableName="chart" columnName="channel_id"/>
    </changeSet>
    <changeSet author="Jaera" id="6">
        <addColumn tableName="chart">
            <column name="owner_username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="Jaera" id="7">
        <renameColumn tableName="chart" oldColumnName="server_id" newColumnName="guild_id" />
    </changeSet>
    <changeSet author="Jaera" id="8">
        <addColumn tableName="ab_history">
            <column name="roll_value" type="integer">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <renameColumn tableName="ab_history" oldColumnName="server_id" newColumnName="guild_id" />
        <createTable tableName="ab_history_individual_rolls">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sequence_number" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="roll_value" type="integer">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Jaera" id="9">
        <addForeignKeyConstraint
                baseColumnNames="uuid"
                baseTableName="ab_history_individual_rolls"
                referencedColumnNames="uuid"
                referencedTableName="ab_history"
                constraintName="ab_history_uuid_fk"
        />
    </changeSet>
    <changeSet author="Jaera" id="10">
        <renameTable oldTableName="player_lookup" newTableName="player" />
        <createTable tableName="player_position">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseColumnNames="uuid"
                baseTableName="player_position"
                referencedColumnNames="uuid"
                referencedTableName="player"
                constraintName="player_position_uuid_fk"
        />
    </changeSet>
    <changeSet author="Jaera" id="11">
        <dropColumn tableName="player" columnName="position" />
    </changeSet>
</databaseChangeLog>